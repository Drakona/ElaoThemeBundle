{% macro popover(content, trigger, placement) %}
    data-toggle="popover"
    data-html="true"
    data-trigger="{{ trigger|default('hover') }}"
    data-placement="{{ placement|default('top') }}"
    data-content="{{ content|e('html') }}"
{% endmacro %}

{% macro tooltip(placement) %}
    data-toggle="tooltip"
    data-placement="{{ placement|default('top') }}"
{% endmacro %}